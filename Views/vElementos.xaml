<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jcevallosS2A.Views.vElementos"
             Title="vElementos">
    <VerticalStackLayout
        Padding="20"
        Spacing="20">
       
        <Label 
            Text="Semana 2 - Elementos GUI"
            FontSize="20"
            TextColor="Beige"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label x:Name="lblUsuarioConectado"
        Text="" 
        FontSize="18"
        HorizontalOptions="Center"
        TextColor="DarkGreen"/>

        <Picker x:Name="pkPaises" Title="Paises">
            <Picker.Items>
                <x:String>Ecuador</x:String>
                <x:String>Peru</x:String>
                <x:String>Colombia</x:String>
                <x:String>Venezuela</x:String>
            </Picker.Items>
        </Picker>

        <Button x:Name="bntPaises"
                Text="Ver Pais"
                Clicked="bntPaises_Clicked"/>

        <DatePicker x:Name="fecha" Format="MM/dd/yyyy"/>

        <Button x:Name="btnfecha"
                Text="Ver fecha"
                Clicked="btnfecha_Clicked"/>


    </VerticalStackLayout>
</ContentPage>